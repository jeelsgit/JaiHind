<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with NoActionBar -->
    <style name="Theme.Converter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Updated primary brand color to a shade of blue -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Updated secondary brand color to a new shade of green -->
        <item name="colorSecondary">@color/green_200</item>
        <item name="colorSecondaryVariant">@color/green_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color updated to match the primary variant -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
</resources>
